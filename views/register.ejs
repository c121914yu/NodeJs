<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> 注册
      </h1>
      <%- include ("./partials/messages.ejs")%>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">姓名</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="请输入姓名"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">邮箱</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="请输入邮箱"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">密码</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="请输入密码"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="password2">确认密码</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="确认密码"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          注册
        </button>
      </form>
      <p class="lead mt-4">已有账号？<a href="/users/login">登录</a></p>
    </div>
  </div>
</div>